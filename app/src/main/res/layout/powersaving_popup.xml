<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#FFFFFF">

    <LinearLayout
        android:background="#FFFFFF"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textColor="#000000"
            android:gravity="center"
            android:text="Ultra Power Saving Mode"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <RelativeLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <ImageView
            android:src="@drawable/pop_up1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            <TextView
                android:textSize="@dimen/_18sdp"
                android:id="@+id/added"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Add"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="35dp"
                />

            <TextView
                android:id="@+id/addedtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="-2dp"
                android:layout_marginLeft="-2dp"
                android:gravity="center"
                android:paddingTop="@dimen/_50sdp"
                android:text="(+10 h 30m)"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/addedtimedetail"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="#000000"
            android:text="Extended Battery Up to 10h 30m"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/applied"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/apply2"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF">

    <androidx.recyclerview.widget.RecyclerView
        android:paddingTop="@dimen/_10sdp"
        android:background="#FFFFFF"
        android:foregroundGravity="center"
        android:id="@+id/recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        </LinearLayout>

</LinearLayout>